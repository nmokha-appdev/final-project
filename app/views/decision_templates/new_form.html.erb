<!-- Validation failure messages -->
<% if @decision.present? %>
  <% if @decision.errors.any? %>
    <% @decision.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new decision
</h1>

<hr>

<form action="/create_decision" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
    </label>

    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @decision.try(:title) %>">
  </div>

  <div class="form-group">
  <label for="select">Select Number of Options</label>
  <select class="form-control" id="list" name="option_count">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
  </select>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Create decision
  </button>
</form>

<hr>

<a href="/decisions">
  Go back
</a>

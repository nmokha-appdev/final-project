<h1>
  All votes
</h1>

<a href="/votes/new">
  Add a new vote
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Option
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @votes.each do |vote| %>
  <tr>
    <td>
      <%= vote.id %>
    </td>

    <td>
      <%= vote.user_id %>
    </td>

    <td>
      <%= vote.option_id %>
    </td>

    <td>
      <%= time_ago_in_words(vote.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(vote.updated_at) %> ago
    </td>

    <td>
      <a href="/votes/<%= vote.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
